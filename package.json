{
  "name": "fonds-prevention-argile",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "build": "next build",
    "start": "next start",
    "start:dev": "next dev",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm typecheck && pnpm lint && pnpm test && pnpm precommit",
    "ci": "pnpm install --frozen-lockfile && pnpm validate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf .next && pnpm start:dev",
    "fresh": "rm -rf .next node_modules pnpm-lock.yaml && pnpm install && pnpm start:dev",
    "prepare": "husky",
    "precommit": "talisman --githook pre-commit",
    "talisman:check": "talisman --scan"
  },
  "dependencies": {
    "@gouvfr/dsfr": "^1.14.0",
    "@sentry/nextjs": "^9.2.0",
    "@socialgouv/matomo-next": "^1.9.2",
    "next": "^15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.25.20"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.8",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.21.0",
    "eslint-config-next": "^15.1.7",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  }
}
