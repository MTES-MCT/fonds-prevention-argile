# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=local
NEXT_TELEMETRY_DISABLED=1

# Matomo (optionnel en local, mais nécessaire en production)
NEXT_PUBLIC_MATOMO_URL=https://stats.beta.gouv.fr
NEXT_PUBLIC_MATOMO_SITE_ID=228

# Base de données
# Pour le développement local, on utilisera Docker
# Pour la production, on utilisera Scalingo
# Ces variables seront utilisées par Docker et Drizzle en local
DB_HOST=localhost
DB_PORT=5432
DB_USER=fonds_argile_user
DB_PASSWORD=fonds_argile_password
DB_NAME=fonds_argile

# API Démarches Simplifiées
DEMARCHES_SIMPLIFIEES_BASE_URL=https://www.demarches-simplifiees.fr
DEMARCHES_SIMPLIFIEES_GRAPHQL_API_KEY=API_KEY_EXAMPLE
DEMARCHES_SIMPLIFIEES_GRAPHQL_API_URL=https://www.demarches-simplifiees.fr/api/v2/graphql
DEMARCHES_SIMPLIFIEES_REST_API_URL=https://www.demarches-simplifiees.fr/api/public/v1
# Démarche Éligibilité
DEMARCHES_SIMPLIFIEES_ID_ELIGIBILITE=id_eligibilite_example
DEMARCHES_SIMPLIFIEES_NOM_ELIGIBILITE=xxxxx-xxx-xxx-xxx
# Démarche Diagnostic
DEMARCHES_SIMPLIFIEES_ID_DIAGNOSTIC=id_diagnostic_example
DEMARCHES_SIMPLIFIEES_NOM_DIAGNOSTIC=xxxxx-xxx-xxx-xxx
# Démarche Devis
DEMARCHES_SIMPLIFIEES_ID_DEVIS=id_devis_example
DEMARCHES_SIMPLIFIEES_NOM_DEVIS=xxxxx-xxx-xxx-xxx
# Démarche Factures
DEMARCHES_SIMPLIFIEES_ID_FACTURES=id_factures_example
DEMARCHES_SIMPLIFIEES_NOM_FACTURES=xxxxx-xxx-xxx-xxx

# IFrame Mesaides Rénov'
NEXT_PUBLIC_MESAIDES_RENOV_IFRAME_URL=https://rga.mesaidesreno.beta.gouv.fr/rga
NEXT_PUBLIC_MESAIDES_RENOV_IFRAME_WIDTH=700px
NEXT_PUBLIC_MESAIDES_RENOV_IFRAME_HEIGHT=600px

# Clé API Brevo 
BREVO_API_KEY=BREVO_API_KEY_EXAMPLE
EMAIL_FROM=noreply@fonds-argile.local

# Development Tools (optional)
NEXT_PUBLIC_USE_DS_MOCK=true  # Utiliser le client mocké pour Démarches Simplifiées

# Authentication
ADMIN_PASSWORD=MotDePasseTest1984!
JWT_SECRET=ma-cle-secrete-jwt-a-changer-en-production-1234567890

# === Security Configuration (optional) ===
# SKIP_TALISMAN=false              # Set to true to skip secret detection
# TALISMAN_HOME=$HOME/.talisman    # Path to Talisman installation

# FranceConnect (obligatoire)
FC_CLIENT_ID=FRANCECONNECT_CLIENT_ID
FC_CLIENT_SECRET=FRANCECONNECT_CLIENT_SECRET
FC_CALLBACK_URL=http://localhost:3000/api/auth/fc/callback
FC_POST_LOGOUT_URL=http://localhost:3000

# URLs
BASE_URL=http://localhost:3000
FC_BASE_URL=https://fcp.integ01.dev-franceconnect.fr

# Scopes et ACR values (obligatoire)
FC_SCOPES=openid given_name family_name email
FC_ACR_VALUES=eidas1  # Obligatoire pour FranceConnect v2